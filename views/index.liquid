{% render 'partials/head.liquid', title: 'Squad page' %}

<form action="/search" method="GET"> 
    <input type="search" name="q" placeholder="Search students..."> 
    <button type="submit">Search</button> 
</form>

<ul>
  <li><a href="/">A-Z</a></li>
  {% for letter in alfabetArray %}
    <li><a href="/a-z/{{ letter }}" class="alfabet">{{ letter | upcase}}</a></li>
  {% endfor %}
</ul>

<ul>
  {% for person in persons %}
   
    <li><a href="/student/{{ person.id }}" style="--color-favorite: {{ person.fav_color }}" class="person-list-item">
    {{ person.vibe_emoji }} {{ person.name }} {{ person.vibe_emoji }}

    {% if person.mugshot %}

      <img src="https://fdnd.directus.app/assets/{{ person.mugshot }}?width=400" alt="Profile picture">

    {% else %}

      <img src="https://cdn.pixabay.com/photo/2023/02/18/11/00/icon-7797704_640.png" alt="Profile picture">

    {% endif %}

    </a></li>
    
  {% endfor %}

  {% if persons.length == 0 %}
    
    <li class="error-message">ðŸ˜¢ Er zijn geen studenten met deze letter ðŸ˜¢</li>

  {% endif %}
</ul>
</main>


<details>
  <summary>open</summary>
  {{ persons | json }}
</details>

{% render 'partials/foot.liquid', squads: squads %}